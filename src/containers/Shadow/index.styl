}

nav {
  width: 100%;
  padding: 1rem;
  position: fixed;
  z-index: 2;
}

span {
  display: inline-block;
  pointer-events: none;
  transition: transform 0.1s linear;
}

.cursor {
  pointer-events: none;
  position: fixed;
  top: 10px;
  left: 10px;
  padding: 10px;
  background-color: #fff;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  mix-blend-mode: difference;
  transition: transform .8s ease, opacity 0.6s ease;
  z-index: 2;
}

.a {
  display: inline-block;
  color: #fff;
  padding: 1rem;
  margin-right: 4rem;
  letter-spacing: .4em;
  font-size: .9em;
  transition: all 0.3s ease, color 0.3s ease;
}

nav.header .a:hover {
  cursor: pointer;
  color: rgb(175, 175, 175);
  transform: scale(1.1);

}

nav.header .a:hover~.cursor {
  transform: translate(-50%, -50%) scale(5);
  opacity: 0.1;
}

